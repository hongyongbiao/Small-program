/* pages/detail/detail.wxss */
.ar_coverpath{
  width: 100%;
  display: flex;
  flex-direction: column;
  flex: 1;
  margin: 0;
  box-sizing: border-box;
}
.ar_coverpath image{
  width: 100%;
  display: block;
  height: 390rpx;
}
.ar_coverpath image:hover{opacity: 0.7;}

/*内容区*/

.ar_cont{
  background: white;
  padding: 20rpx 40rpx;
  font-size: 30rpx;
  margin-bottom: 20rpx;
  color: #666;
  line-height: 46rpx;
}

.ar_cont_h1{
  font-size:32rpx;
  color: #000;
  font-weight: bolder;
  line-height: 50rpx; 
  display: flex;
}
.ar_product{
  flex: 1;
  width: 120rpx;
  height: 220rpx;
  margin-right: 40rpx;
  margin-top:20rpx; 
}
.ar_title{
  display: flex;
  flex-direction: column;
  flex: 2;
  margin-top: 40rpx;
}
.ar_cont_price{
  color: red;
  margin-top:30rpx; 
}
.ar_detail{
  width: 100%;
  height:2500rpx;
}
.cont{
  font-size: 26rpx;
  line-height: 40rpx;
  font-weight: lighter;
  color: #666;
}
.ar_line{
  width: 100%;
  height: 1rpx;
  background: #ddd;
  margin: 30rpx 0;
}
.ar_book{
  background: #27BBFA;
  font-size: 32rpx;
  color: #fff;
  border-radius: 0;
  margin: 40rpx 0;
}
.ar_cont_detail{
  font-size: 28rpx;
  line-height: 40rpx;
  font-weight: lighter;
  color: #666;
}
