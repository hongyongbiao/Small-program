/* pages/new/new.wxss */
.new_body{
  height: 1300rpx;
}
.new_banner{
  width: 100%;
  display: flex;
  flex: 1;
  flex-direction: column;
}
.new_banner image{
  width: 100%;
  height: 390rpx;
}
.new_content{
  width: 100%;
}
.section_item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;

  padding: 30rpx;
  border-bottom: 2rpx solid #ddd;
}
.new_title{
  width: 750rpx;
  font-size: 28rpx;
  line-height: 44rpx;
  margin-bottom: 40rpx;
}
.new_bott{
  flex-direction: column;
  align-items: center;
}
.new_time{
  font-size: 26rpx;
  color: #666;
}
.arrow{
  width: 12rpx;
  height: 12rpx;
  border-top: 2rpx solid #999;
  border-right: 2rpx solid #999;
  transform: rotate(45deg);
  position: absolute;
  right: 40rpx;
  margin-top: 20rpx;
}